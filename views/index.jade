          h2 contact me
          #contact_form
            form(name="contact", method='post', action='/')
              fieldset
                input.text-input#name(placeholder="Name", type="text", name="name", value=name)
                -if (name == "")
                  label.error#name_error(for="name") &nbsp; *Invalid Name
                br
                input.text-input#email(placeholder="Email", type="text", name="email", value=email)
                -if (email_sym == -1)
                  label.error#email_error(for="email") &nbsp; *Invalid Email
                br
                - if (msg == "")
                  textarea.text-input#message(placeholder="Message", type="text", rows="6", name="message")
                  label.error#name_error(for="name") *Empty Message
                - else if (!msg)
                  textarea.text-input#message(placeholder="Message", type="text", rows="6", name="message")
                - else
                  textarea.text-input#message(type="text", rows="6", name="message") #{msg}
              p
                input.button#submit_btn(type="submit", name="submit", value="Submit")
